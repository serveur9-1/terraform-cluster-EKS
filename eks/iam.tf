  role       = aws_iam_role.eks_role.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonVPCFullAccess"
}

# Permissions pour le rôle des NOEUDS EKS
resource "aws_iam_role_policy_attachment" "eks_node_role_worker" {
